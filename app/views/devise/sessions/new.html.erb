<div class = "signin">
<h2>Please Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">   
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your Email", class: "email1" %>
  </div>

  <div class="field">    
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "psw1" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field signin_checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "devise_login" %>
  </div>
<% end %>
 </p><%= render "devise/shared/links" %>
</div>
